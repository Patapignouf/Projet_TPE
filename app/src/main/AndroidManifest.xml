<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="patapignouf.com">

    <!--
      If using a Toolbar as the activities' app bars (instead of the default ActionBar), must use
      a theme inheriting from Theme.AppCompat.*.NoActionBar. This prevents the default ActionBar
      from showing up.
    -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".tabs.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".tabs.Menu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".tabs.introductionActivity"
            android:label="@string/title_activity_introduction"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".tabs.conclusionActivity" />
        <activity android:name=".tabs.creditActivity"></activity>
    </application>

</manifest>